                    print('Too bad. The table rolled a {0}  and you lost {1}$. You still own {2}$.'.format(roll,
                                                                                                           bet_value,
                                                                                                           money))
                    time.sleep(5)
                    print(table)
            else:
                print('Invalid input. Please try again!')
                time.sleep(5)
                print(table)

        elif bet == '12':
            dozen = int(input('Please select a dozen (1,2 or 3): '))
            if dozen in [1, 2, 3]:
