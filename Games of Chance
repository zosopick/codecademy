                time.sleep(5)
                print(table)

        elif bet == '7':
            set = [0, 1, 2, 3]
            bet_value = float(input('How much would you like to bet: '))
            roll = random.randint(0, 36)
            if roll in set:
                money += 8 * bet_value
                print('Congratulations! The table rolled a {0} and you won {1}$. Now you own {2}$.'.format(roll,
                                                                                                           8 * bet_value,
                                                                                                           money))
                time.sleep(5)
                print(table)
            else:
                money -= bet_value
                print('Too bad. The table rolled a {0} and you lost {1}$. You still own {2}$.'.format(roll,
                                                                                                      bet_value,
                                                                                                      money))
                time.sleep(5)
                print(table)
        elif bet == '8':
            color = input('Enter R for red or B for black: ')
            if color in ['R', 'B']:
                bet_value = float(input('How much would you like to bet: '))
                roll = random.randint(0, 36)
                if (roll in black and color == 'B') or (roll in red and color == 'Red'):
                    money += bet_value
                    print('Congratulations! The table rolled a {0}  and you won {1}$. Now you own {2}$.'.format(roll,
                                                                                                                bet_value,
                                                                                                                money))
                    time.sleep(5)
                    print(table)
                else:
                    money -= bet_value
                    print('Too bad. The table rolled a {0}  and you lost {1}$. You still own {2}$.'.format(roll,
                                                                                                           bet_value,
                                                                                                           money))
                    time.sleep(5)
                    print(table)
            else:
                print('Invalid input. Please try again!')
                time.sleep(5)
                print(table)


        elif bet == '9':
            ooe = input('Enter Odd for odd or Even for even: ')
            if ooe != 'O' and ooe != 'E':
                print('Invalid input. Please try again!')
                time.sleep(5)
                print(table)
            else:
                bet_value = float(input('How much would you like to bet: '))
                roll = random.randint(0, 36)
                if (roll in even and ooe == 'E') or (roll in odd and ooe == 'O'):
                    money += bet_value
                    print('Congratulations! The table rolled a {0}  and you won {1}$. Now you own {2}$.'.format(roll,
                                                                                                                bet_value,
                                                                                                                money))
