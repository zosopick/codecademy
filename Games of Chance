            if first == 3:
                set = [0, 1, 3]
                bet_value = float(input('How much would you like to bet: '))
                roll = random.randint(0, 36)
                if roll in set:
                    money += 11.667 * bet_value
                    print('Congratulations! The table rolled a {0} and you won {1}$. Now you own {2}$.'.format(roll,
                                                                                                               11.667 * bet_value,
                                                                                                               money))
                    time.sleep(5)
                    print(table)
                else:
                    money -= bet_value
                    print('Too bad. The table rolled a {0} and you lost {1}$. You still own {2}$.'.format(roll,
                                                                                                          bet_value,
                                                                                                          money))
                    time.sleep(5)
                    print(table)
            else:
