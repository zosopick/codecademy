if __name__=='__main__':
    games=('(1) Coin Toss \n'
          ' (2) Coin Toss 2\n'
          ' (3) Cho-Han\n'
          ' (4) Cards game\n'
          ' (5) Roulette')
    print('Welcome to the game arena. \n'
          'We have 5 games for you today:\n'
          ,games)
    money=float(input('How much money do you with to invest in our game arena? '))
    while money>0:
        selection=int(input('Which game would you like to play: '))
        if selection==1:
            game1(money)
        elif selection==2:
            game2(money)
        elif selection==3:
            game3(money)
        elif selection==4:
            game4(money)
        elif selection==5:
            game5(money)
        else:
            print('Invalid input. Please try again.')
