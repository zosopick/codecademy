                print('Invalid input. Please try again!')
                time.sleep(5)
                print(table)
            else:
                bet_value = float(input('How much would you like to bet: '))
                roll = random.randint(0, 36)
                if (roll < 19 and roll != 0 and loh == 'L') or (roll > 19 and loh == 'H'):
                    money += bet_value
                    print('Congratulations! The table rolled a {0}  and you won {1}$. Now you own {2}$.'.format(roll,
                                                                                                                bet_value,
